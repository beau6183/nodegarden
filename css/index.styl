
*
  margin: 0
  padding: 0

html, body
  height: 100%

body
  background-color: #FFF
  overflow: hidden
  
 body.orbiter, body.nbody
  background-color: #000

.menu
  color: white
  border: 1px solid white
  padding: 10px;
  position: absolute
  top: 0
  right: 0
  
body.white-bg > .menu
  color: black
  border: 1px solid black

#container
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  
 ul
  list-style: none
  color: white
  
 ul > li > a
  color: white

body.white-bg .menu > ul > li > a
  color: black